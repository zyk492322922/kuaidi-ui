/**home.wxss**/
.page-section-spacing {
	width: 95%;
}
.swiper {
	height: 250rpx;
}

.banner-pic {
	height: 250rpx;
	width: 100%;
	border-radius: 20rpx;
}

/* navi-tab.wxss */
.navi-tab{
	display: flex;
	justify-content: space-around;
	width: 95%;
	height: 230rpx;
	background: #ffffff;
	margin-top: 36rpx;
	border-radius: 15rpx;
}

.navi-pic {
	margin-top: 30rpx;
	width: 85rpx;
	height: 85rpx;
	padding-bottom: 25rpx;
}

.navi-tab-item {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

/* 底部数据展示 */
.bottom-data {
	padding-top: 25rpx;
	width: 95%;
	height: 300rpx;
}
.data-title{
	justify-content: flex-start;
	align-items: center;
	width: 90%;
	height: 50rpx;
	padding-bottom: 15rpx;
}
.data-title-pic {
	width: 45rpx;
	height: 40rpx;
	margin-right: 13rpx;
}

.data-content {
	justify-content: space-around;
	width: 100%;
	height: 220rpx;
	padding-top: 25rpx;
	background: #ffffff;
	border-radius: 15rpx;
}

.data-content-padding {
	padding-bottom: 25rpx;
	align-items: center;
}

.data-content-pic {
	width: 70rpx;
	height: 70rpx;
}