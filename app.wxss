.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx 0;
	box-sizing: border-box;
	background: #f4f3f3;
	font-family: sans-serif;
	font-size: 25rpx;
}

.flex {
	display: flex;
	flex-direction: row;
}

/* 水平居中 */
.justify-center {
	justify-content: center;
}

/* 垂直居中 */
.align-items {
	align-items: center
}

.flex-col {
	display: flex;
	flex-direction: column;
}

.txt {
	color: #0e0e15;
}
